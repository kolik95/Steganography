<Pages:BasePage x:TypeArguments="VMs:LSBDecViewModel" x:Class="WindowsUI.Pages.LSBDecPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowsUI"
      xmlns:Pages="clr-namespace:WindowsUI.Pages"
      xmlns:VMs="clr-namespace:WindowsUI.ViewModels"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LSBDecPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0">
            <Label 
                Content="Formát textu"
                FontSize="15"
                Margin="0 0 10 0"/>
            <ComboBox
                Width="Auto"
                FontSize="15"
                IsEditable="False" 
                SelectedIndex="0">
                <ComboBoxItem>ASCII</ComboBoxItem>
                <ComboBoxItem>UTF-8</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <DockPanel Grid.Row="1">
            <Grid AllowDrop="True" 

                  x:Name="ImageGrid1"
                  Background="Transparent"
                  DockPanel.Dock="Left">
                <TextBlock Text="Vložte obrázek" 
                           TextAlignment="Center" 
                           VerticalAlignment="Center" 
                           Background="Transparent" 
                           Foreground="Gray"/>
                <Image
                       x:Name="Image1"/>
            </Grid>
            <Grid AllowDrop="True" 

                  x:Name="ImageGrid2"
                  Background="Transparent"
                  DockPanel.Dock="Right"
                  Margin="10 0 0 0">
                <TextBlock Text="Vložte obrázek" 
                           TextAlignment="Center" 
                           VerticalAlignment="Center" 
                           Background="Transparent" 
                           Foreground="Gray"/>
                <Image 
                       x:Name="Image2"/>
            </Grid>
        </DockPanel>
    </Grid>
</Pages:BasePage>
